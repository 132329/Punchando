@model SGC_MVC.Models.LocalPasswordModel
@using SGC_MVC.CustomCode

<h1 class="title"></h1>
@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "standard_form fluid_wrap" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

        <ul class="form_items_container col-lg-6 pl0">
            <li>
                @Html.LabelForR(m => m.OldPassword)
                @Html.PasswordFor(m => m.OldPassword, new { @class = "col-lg-12 form-control" })
            </li>
            <li>
                @Html.LabelForR(m => m.NewPassword)
                @Html.PasswordFor(m => m.NewPassword, new { @class = "col-lg-12 form-control" })
            </li>
            <li>
                @Html.LabelForR(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "col-lg-12 form-control" })
            </li>
            <li>
                <div class="form_items_container col-lg-10 pl0">
                    <input type="submit" value="Cambiar" class="button_save btstyles col-lg-4" />
                    @Html.ActionLink("Cancelar", "Index", "Home", null, new{ @class="button_cancel btstyles col-lg-4" })

                </div>
            </li>
        </ul>
    </fieldset>
}
