@model SGC_MVC.Models.Entity
@using SGC_MVC.CustomCode; 
 @{ 
 ViewBag.Title = "Clientes - Editar";
}

<div class="section_title fluid_wrap">
    <div class="col-lg-8 pl0">
        <h1 class="the_title">Actualizar información de Cliente</h1>
    </div>
    <div class="col-lg-4 pr0"></div>
</div>

<div class="drag_and_drop_container fluid_wrap reset">
    <div class="drag_container_title">
        <h2>Datos del Cliente</h2>
    </div>
    <div class="drag_container_the_content_area drag_content_area_fluid_wrap">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "clientEditForm", @class = "standard_form fluid_wrap" }))
        {
            @Html.ValidationSummary(true)

            <fieldset>
                <legend></legend>
                <ul class="form_items_container col-lg-6 pl0">
                    @Html.HiddenFor(model => model.ID)
                    @Html.HiddenFor(model => model.entityTypeID)
                    @Html.HiddenFor(model => model.createDate, new{ @class="ignore" })
                    @Html.HiddenFor(model => model.createUser)
                    @Html.HiddenFor(model => model.status)
                    @Html.HiddenFor(model => model.companyID)

                    <li>
                        @Html.LabelForR(model => model.name)
                        @Html.TextBoxFor(model => model.name, new { @class = "col-lg-12 form-control" })
                        @Html.ValidationMessageFor(model => model.name)
                    </li>

                    <li>
                        @Html.LabelForR(model => model.address)
                        @Html.TextAreaFor(model => model.address, new { @class = "col-lg-12 form-control" })
                        @Html.ValidationMessageFor(model => model.address)
                    </li>

                    <li>
                        @Html.LabelForR(model => model.phone)
                        @Html.TextBoxFor(model => model.phone, new { @class = "col-lg-12 form-control" })
                        @Html.ValidationMessageFor(model => model.phone)

                    </li>
                    <li>
                        <div class="form_items_container col-lg-8 pl0">
                            <br />
                            <p>
                                <input type="submit" value="Guardar" class="button_save btstyles col-lg-5" />
                                @Html.ActionLink("Cancelar", "Index", null, new { @class="button_cancel btstyles col-lg-5" })
                            </p>
                        </div>
                    </li>
                </ul>
            </fieldset>
        }
    </div>
    <!--end drag_container_the_content_area-->
</div>
<!--end drag_and_drop_container-->

@section Scripts{
    <script src="~/Scripts/jquery.maskedinput.min.js"></script>
    <script>
        $(document).ready(function () {
            var phoneMask = '(999) 999-9999';
            $('#phone').mask(phoneMask);

            $('#clientEditForm').submit(function (event) {
                $('#phone').mask('9999999999');
            });
        });
    </script>
}