@model SGC_MVC.Models.SubMenu
@using SGC_MVC.CustomCode; 
 @{ 
 ViewBag.Title = "Menu - Eliminar Sub menu";
}

<div class="section_title fluid_wrap">
    <div class="col-lg-8 pl0">
        <h1 class="the_title">Eliminar sub men&uacute;</h1>
    </div>
    <div class="col-lg-4 pr0"></div>
</div>

<div class="drag_and_drop_container fluid_wrap reset">
    <div class="drag_container_title">
        <h2>¿Esta seguro que desea eliminar este sub men&uacute;?</h2>
    </div>
    <div class="drag_container_the_content_area drag_content_area_fluid_wrap">
        <ul class="form_items_container col-lg-6 pl0">
            <li>
                @Html.DisplayNameFor(model => model.menuID)<br />
                @Html.DisplayFor(model => model.menuID)
            </li>

            <li>
                @Html.DisplayNameFor(model => model.name)<br />
                @Html.DisplayFor(model => model.name)
            </li>

            <li>
                @Html.DisplayNameFor(model => model.viewID)<br />
                @Html.DisplayFor(model => model.viewID)
            </li>

            <li>
                @Html.DisplayNameFor(model => model.noOrder)<br />
                @Html.DisplayFor(model => model.noOrder)
            </li>

            @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "standard_form fluid_wrap" }))
            {
                <li>
                    <div class="form_items_container col-lg-8 pl0">
                        <br />
                        <p>
                            <input type="submit" value="Eliminar" class="button_delete btstyles col-lg-5" />
                            @Html.ActionLink("Cancelar", "Edit", new { id = Model.menuID }, new { @class = "button_cancel btstyles col-lg-5" })
                        </p>
                    </div>
                </li>
            }
        </ul>
    </div>
    <!--end drag_container_the_content_area-->
</div>
<!--end drag_and_drop_container-->
