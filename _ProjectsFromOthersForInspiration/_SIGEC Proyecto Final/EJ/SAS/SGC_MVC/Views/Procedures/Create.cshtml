@model SGC_MVC.Models.Procedure
@using SGC_MVC.CustomCode;
@{ 
    ViewBag.Title = "Procedimiento - Crear";
}

<div class="section_title fluid_wrap">
    <div class="col-lg-8 pl0">
        <h1 class="the_title">Registrar nuevo Procedimiento</h1>
    </div>
    <div class="col-lg-4 pr0"></div>
</div>

<div class="drag_and_drop_container fluid_wrap reset">
    <div class="drag_container_title">
        <h2>Datos del procedimiento a registrar</h2>
    </div>
    <div class="drag_container_the_content_area drag_content_area_fluid_wrap">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "standard_form fluid_wrap" }))
        {
            @Html.ValidationSummary(true)

            <fieldset>
                @Html.Hidden("validateUniq", "Procedure&Nombre")
                <legend></legend>

                <ul class="form_items_container col-lg-6 pl0">
                    <li>
                        @Html.LabelForR(model => model.ruleID)
                        @Html.DropDownListFor(model => model.ruleID, null, String.Empty, new { @class = "col-lg-12 form-control dropdown" })
                        @Html.ValidationMessageFor(model => model.ruleID)
                    </li>
                    <li>
                        @Html.LabelForR(model => model.name)
                        @Html.TextBoxFor(model => model.name, new { @class = "col-lg-12 form-control" })
                        @Html.ValidationMessageFor(model => model.name)
                    </li>
                    <li>
                        @Html.LabelForR(model => model.target)
                        @Html.TextAreaFor(model => model.target, new { @class = "col-lg-12 form-control" })
                        @Html.ValidationMessageFor(model => model.target)
                    </li>
                    <li>
                        <div class="form_items_container col-lg-8 pl0">
                            <input type="submit" value="Guardar" class="button_save btstyles col-lg-5" />
                            @Html.ActionLink("Cancelar", "Index", null, new { @class = "button_cancel btstyles col-lg-5" })
                        </div>
                    </li>
                </ul>

                <ul class="form_items_container col-lg-6 pr0">
                    <li>
                        @Html.Label("Proceso")
                        @Html.DropDownListFor(model => model.processID, null, String.Empty, new { @class = "col-lg-12 form-control" })
                        @Html.ValidationMessageFor(model => model.processID)
                    </li>
                    <li>
                        @Html.Label("Responsable")
                        @Html.DropDownListFor(model => model.responsible, null, String.Empty, new { @class = "col-lg-12 form-control" })
                        @Html.ValidationMessageFor(model => model.responsible)
                    </li>
                    <li>
                        @Html.LabelForR(model => model.procedureScope)
                        @Html.TextAreaFor(model => model.procedureScope, new { @class = "col-lg-12 form-control" })
                        @Html.ValidationMessageFor(model => model.procedureScope)
                    </li>
                </ul>

            </fieldset>
        }
    </div>
    <!--end drag_container_the_content_area-->
</div>
<!--end drag_and_drop_container-->

